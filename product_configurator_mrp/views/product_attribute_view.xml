<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_attribute_value_form_view_mrp" model="ir.ui.view">
        <field name="name">product.configurator.mrp.attribute.value.form</field>
        <field name="model">product.attribute.value</field>
        <field name="inherit_id" ref="product_configurator.product_attribute_value_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='product_id']" position="after">
                <field name="quantity" attrs="{'readonly': [('product_id', '=', False)]}" force_save="1"/>
            </xpath>
        </field>
    </record>

</odoo>
